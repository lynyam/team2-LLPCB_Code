{
  "manifest_version": 3,
  "name": "Clarity.AI",
  "description": "Fake news detector",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Click to open panel"
  },
  
  "permissions": ["sidePanel", "tabs"],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
